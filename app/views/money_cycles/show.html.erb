<div class="card p-3 mb-4">
  <h5>Add Income</h5>
  <%= form_with model: [@money_cycle, @income] do |f| %>
    <div class="row">
      <div class="col">
        <%= f.number_field :amount, class: "form-control", placeholder: "Amount" %>
      </div>
      <div class="col">
        <%= f.text_field :source, class: "form-control", placeholder: "Source (GPay)" %>
      </div>
      <div class="col">
        <%= f.date_field :date, class: "form-control" %>
      </div>
      <div class="col">
        <%= f.submit "Add", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>

<div class="card p-3 mb-4">
  <h5>Add Expense</h5>
  <%= form_with model: [@money_cycle, @expense] do |f| %>
    <div class="row">
      <div class="col">
        <%= f.number_field :amount, class: "form-control", placeholder: "Amount" %>
      </div>
      <div class="col">
        <%= f.select :category, Expense::CATEGORIES, {}, 
            class: "form-control", 
            id: "category-select" %>
        </div>

        <div class="col" id="custom-category-field" style="display:none;">
        <%= f.text_field :custom_category, 
            class: "form-control", 
            placeholder: "Custom Category" %>
        </div>

      </div>
      <div class="col">
        <%= f.date_field :date, class: "form-control" %>
      </div>
      <div class="col">
        <%= f.submit "Add", class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>
</div>

<div class="card p-3 shadow-sm">
  <h5>Expenses</h5>

  <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Category</th>
        <th>Amount</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @expenses.each do |expense| %>
        <tr>
          <td><%= expense.date %></td>
          <td><%= expense.final_category %></td>
          <td>â‚¹<%= expense.amount %></td>
          <td>
            <%= link_to "Delete",
                money_cycle_expense_path(@money_cycle, expense),
                method: :delete,
                class: "btn btn-sm btn-outline-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const categorySelect = document.getElementById("category-select");
    const customField = document.getElementById("custom-category-field");

    function toggleCustomField() {
      if (categorySelect.value === "Others") {
        customField.style.display = "block";
      } else {
        customField.style.display = "none";
      }
    }

    toggleCustomField();
    categorySelect.addEventListener("change", toggleCustomField);
  });
</script>